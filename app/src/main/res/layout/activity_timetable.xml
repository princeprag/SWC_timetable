                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Slot 3: Subject"
                android:id="@+id/slot3v"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Slot 4: Time"
                android:id="@+id/slot4t"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Slot 4: Subject"
                android:id="@+id/slot4v"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

